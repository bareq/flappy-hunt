<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuImage"
        android:src="@anim/fly"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dołącz do gry"
        android:id="@+id/button"
        android:background="@xml/rounded_blue"
        android:textColor="#ffffffff"
        android:textSize="24dp"
        android:padding="15dp"
        android:layout_below="@+id/menuImage"
        android:layout_centerHorizontal="true"
        android:onClick="przejdzDoListy"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageCelownik"
        android:layout_alignTop="@id/menuImage"
        android:layout_alignBottom="@id/menuImage"
        android:layout_alignLeft="@id/menuImage"
        android:layout_alignRight="@id/menuImage"
        android:src="@drawable/cel" />

</RelativeLayout>
